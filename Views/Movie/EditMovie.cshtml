@model MVCApplication.Models.Movie

<div class="edit_movie_container">
    <div class="edit_img">
        <img src="@Model.MovieImageUrl"/>
    </div>
    <div class="edit_detail">
        <form action="addNew" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input name="Title" type="text" class="form-control" value="@Model.Title" placeholder="Enter Movie Name">
            </div>
            <div class="form-group">
                <input name="directorName" type="text" class="form-control" placeholder="Enter Director names">
            </div>
            <div class="form-group">
                <select class="form-control" name="Genre">
                    <option>Select a Movie Genre</option>
                    <option>Sci-Fi</option>
                    <option>Action</option>
                    <option>Comedy</option>
                    <option>Horror</option>
                </select>
            </div>
            <div class="form-group">
                <input name="releaseDate" type="date" class="form-control" placeholder="Enter Director names">
            </div>
            <div class="form-group">
                <input name="Rating" type="number" class="form-control" placeholder="Enter Rating out of 5" min="0" max="5">
            </div>
            <div class="form-group">
                <label for="imageUpload">Upload a Thumnail Image:</label>
                <input class="form-control" type="file" id="imageUpload" name="Image" accept="image/*" />
            </div>
            <div class="form-group">
                <label for="videoUpload">Upload a Movie Video:</label>
                <input class="form-control" type="file" id="videoUpload" name="Video" accept="video/*" />
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>