<div class="add-movie-bg">
    <img src="assets/add_bg.jpg" />
</div>

<div class="text-center login-container bg-dark-cus bg-gradient text-light">
    <h4 class="display-6">Add New Movie</h4>
    <hr />
    <form action="addNew" method="post">
        <div class="form-group">
            <input name="movieName" type="text" class="form-control"  placeholder="Enter Movie Name">
        </div>
        <div class="form-group">
            <input name="directorName" type="text" class="form-control"  placeholder="Enter Director names">
        </div>
        <div class="form-group">
            <select class="form-control">
                <option>Select a Movie Genre</option>
                <option>Sci-Fi</option>
                <option>Action</option>
                <option>Comedy</option>
                <option>Horror</option>
            </select>
        </div>
        <div class="form-group">
            <input name="releaseDate" type="date" class="form-control" placeholder="Enter Director names">
        </div>
        <div class="form-group">
            <input name="rating" type="number" class="form-control" placeholder="Enter Rating out of 5" min="0" max="5">
        </div>

        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div>