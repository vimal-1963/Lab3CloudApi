        <div class="movie-content">
            <p class="heading">Top-Rated</p>
            <div class="movie-item-container">
                @foreach (var movie in Model.TopRatedMovies)
                {
                    <div class="movie-item">
                        <div class="movie-img">
                            <img src="@movie.MovieImageUrl" />
                        </div>
                        <div class="movie-card-detail">
                            <div class="rate_icon_div">
                                <div class="rating_div">
                                    <img class="rating_dwnld_img" src="~/assets/star-solid.svg" />
                                    <p class="rating_value">@movie.Rating</p>
                                </div>
                                <a href="@movie.URL" download>
                                    <img class="rating_dwnld_img" src="~/assets/download-solid.svg" alt="Download">
                                </a>
                            </div>
                            <p>@movie.Title</p>
                            @using (Html.BeginForm("EditMovie", "Movie", FormMethod.Post))
                            {
                                @Html.HiddenFor(model => movie.MovieID)
                                @Html.HiddenFor(model => movie.Title)
                                @Html.HiddenFor(model => movie.Directors[0])
                                @Html.HiddenFor(model => movie.Genre)
                                @Html.HiddenFor(model => movie.Rating)
                                @for (var i = 0; i < movie.Comments.Count; i++)
                                {
                                    @Html.HiddenFor(model => movie.Comments[i].Comment)
                                    @Html.HiddenFor(model => movie.Comments[i].CommentedUser)
                                    @Html.HiddenFor(model => movie.Comments[i].CommentTime)
                                }                                   @Html.HiddenFor(model => movie.MovieImageUrl)
                                @Html.HiddenFor(model => movie.URL)
                                @Html.HiddenFor(model => movie.UploadedUserId)
                                @Html.HiddenFor(model => movie.URL)
                                @Html.HiddenFor(model => movie.UploadedUserId)
                                // This includes all the model properties as hidden fields
                                <button class="movie_edit_btn" type="submit">Edit</button>
                            }
                        </div>
